# Application
NODE_ENV=production
APP_NAME="Vanta X - Trade Spend"
APP_URL=https://vantax.yourdomain.com
API_URL=https://api.vantax.yourdomain.com

# Database
DATABASE_URL=postgresql://vantax:your_secure_password@localhost:5432/vantax
DB_PASSWORD=your_secure_password

# Redis
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_redis_password

# RabbitMQ
RABBITMQ_URL=amqp://vantax:your_rabbitmq_password@localhost:5672
RABBITMQ_PASSWORD=your_rabbitmq_password

# JWT & Security
JWT_SECRET=your_very_long_random_jwt_secret_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_very_long_random_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# Microsoft 365 / Azure AD
AZURE_AD_TENANT_ID=your_azure_tenant_id
AZURE_AD_CLIENT_ID=your_azure_client_id
AZURE_AD_CLIENT_SECRET=your_azure_client_secret
AZURE_AD_REDIRECT_URI=https://vantax.yourdomain.com/auth/callback

# OpenAI (for AI features)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM="Vanta X <noreply@vantax.com>"

# SAP Integration
SAP_ECC_HOST=your_sap_ecc_host
SAP_ECC_CLIENT=100
SAP_ECC_USER=your_sap_user
SAP_ECC_PASSWORD=your_sap_password

SAP_S4HANA_HOST=your_sap_s4hana_host
SAP_S4HANA_CLIENT=100
SAP_S4HANA_USER=your_sap_user
SAP_S4HANA_PASSWORD=your_sap_password

# File Storage
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vantax-uploads

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key
DATADOG_API_KEY=your_datadog_api_key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_CHATBOT=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_COMPANY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=vantax-backups

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/vantax

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
ENABLE_CLUSTERING=true
CLUSTER_WORKERS=4

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
CORS_ORIGIN=https://vantax.yourdomain.com
ENABLE_RATE_LIMITING=true

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# API Keys for External Services
GOOGLE_MAPS_API_KEY=your_google_maps_key
STRIPE_SECRET_KEY=your_stripe_secret_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Development/Testing
SEED_DATABASE=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false